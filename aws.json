{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key` }}",
      "region": "us-east-1",
      "source_ami": "ami-5e1b6336",
      "instance_type": "m3.medium",
      "ssh_username": "ubuntu",
      "ami_name": "ntp-curbix Ubuntu 14.04.1 LTS {{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "ansible-local",
      "playbook_file": "playbook.yml",
      "role_paths": "roles/ntp"
    },
    {    
      "type": "shell",
      "inline": [
        "sudo docker pull sgarlick987/aws-startup-utils"
      ]
    }
  ]
}
